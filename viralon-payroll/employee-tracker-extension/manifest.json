{
  "manifest_version": 3,
  "name": "Employee Activity Tracker",
  "version": "1.0",
  "description": "Tracks employee web activity",
  "permissions": ["tabs", "activeTab", "scripting", "storage"],
  "host_permissions": ["http://localhost:3000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Track Activity",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
